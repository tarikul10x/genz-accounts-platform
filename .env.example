# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///genZ_accounts.db

# For production (PostgreSQL) - Replace with your database URL
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Security - CHANGE THIS TO A STRONG RANDOM KEY!
SESSION_SECRET=your-super-secret-key-here-change-this-in-production

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789

# Get your Telegram ID from @userinfobot
ADMIN_TELEGRAM_ID=123456789

# Google Sheets Integration (Optional)
# Path to Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS=credentials.json

# Name of your Google Sheet for account storage
GOOGLE_SHEETS_SPREADSHEET_NAME=GenZ Accounts Database

# Google OAuth (Optional - for web-based Google auth)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-password

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True

# Production Settings (use these for deployment)
# FLASK_ENV=production
# FLASK_DEBUG=False

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Payment Configuration (Optional)
# Add your payment gateway configurations here
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Security Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=xlsx,xls,csv,txt

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# MLM Configuration
MLM_LEVEL_1_RATE=0.15  # 15%
MLM_LEVEL_2_RATE=0.10  # 10%
MLM_LEVEL_3_RATE=0.07  # 7%
MLM_LEVEL_4_RATE=0.05  # 5%
MLM_LEVEL_5_RATE=0.03  # 3%

# Withdrawal Settings
MINIMUM_WITHDRAWAL=500  # Minimum withdrawal amount in TK
WITHDRAWAL_FEE=0       # Withdrawal fee percentage

# File Processing
AUTO_APPROVE_THRESHOLD=0    # Auto-approve files with less than X accounts
MAX_ACCOUNTS_PER_FILE=10000 # Maximum accounts per file

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Backup Settings
AUTO_BACKUP=True
BACKUP_INTERVAL=24  # Hours

# Development Only
DEV_MODE=True
DEBUG_TOOLBAR=False